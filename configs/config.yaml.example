# 服务器配置
server:
  port: 8080
  mode: debug # debug, release, test

# 数据库配置
database:
  driver: mysql
  host: 127.0.0.1
  port: 3306
  username: root
  password:  # 修改为实际的数据库密码
  dbname: eden_ops
  charset: utf8mb4
  max_idle_conns: 10
  max_open_conns: 100
  log_level: info # silent, error, warn, info

# JWT配置
jwt:
  secret: eden_ops_secret_key
  expire: 24 # 小时
  issuer: eden_ops

# 日志配置
log:
  level: info # debug, info, warn, error, fatal
  format: text # text, json
  output: console # console, file
  file: logs/eden-ops.log